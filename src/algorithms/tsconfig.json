{
  "compilerOptions": {
    "target": "ES2020",       // or ES2015, ES2022, ESNext
    "module": "ESNext",       // recommended for modern Node
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"]
  }
}
